@model Answer

@{
    ViewData["Title"] = "Cevap Ekle";
}

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Cevap Ekle</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label>Cevabınız:</label>
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Soruyu Seçin:</label>
            <select asp-for="QuestionId" asp-items="@ViewBag.QuestionList" class="form-select"></select>
        </div>

        <div class="mb-3">
            <input asp-for="UserName" value="@User.Identity.Name" readonly class="form-control-color" hidden />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Cevapla</button>



    </div>


</form>